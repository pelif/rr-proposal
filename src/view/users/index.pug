extends ./../layout/main

block content 
    div.app-body-content       
        if message === 1             
            div.alert.alert-success Usuário inserido com sucesso!
        if message === 2 
            div.alert.alert-danger Não foi possível inserir o usuário!  
        if message === 3 
            div.alert.alert-danger Ocorreu um erro ao tentar inserir o usuário!
        if message === 4 
            div.alert.alert-danger Não foi possível trazer dados no módulo de usuários!
        if message === 5 
            div.alert.alert-success Usuário excluído com sucesso!
        if message === 6 
            div.alert.alert-danger Não foi possível excluir o usuário!        
        h3 Usuários Cadastrados
        div.row
            a.btn.btn-primary.font-weight-bold(href="/users/new") Criar Novo Usuário            
            table.table.table-striped
                thead.thead-dark 
                    tr 
                        th Nome
                        th Nome de Usuário
                        th Ações
                tbody 
                    each users in data
                        tr 
                            td= users.name 
                            td= users.username
                            td  
                                form(action="/users/"+users.id+"?_method=DELETE", method="POST")                                    
                                    button.btn.btn-danger(type="submit") Excluir
                                        
    